{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "index.tsx",
  "module": "index.tsx",
  "scripts": {
    "knex": "bun run utils/knex.ts",
    "dev": "bun --hot index.tsx",
    "build": "bun build resources/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\\\"production\\\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun index.tsx"
  },
  "dependencies": {
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  }
}
